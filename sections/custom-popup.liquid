{% schema %}
{
  "name": "Custom Popup",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_popup",
      "label": "Enable Popup",
      "default": true
    },
    {
      "type": "text",
      "id": "popup_heading",
      "label": "Popup Heading",
      "default": "Subscribe & Save"
    },
    {
      "type": "textarea",
      "id": "popup_text",
      "label": "Popup Text",
      "default": "Join our newsletter and get 10% off"
    }
  ],
  "presets": [
    {
      "name": "Custom Popup"
    }
  ]
}
{% endschema %}

{% if section.settings.enable_popup %}
  <div id="custom-popup" style="position: fixed; bottom: 20px; right: 20px; background: white; border: 1px solid #ddd; padding: 20px; max-width: 300px; box-shadow: 0 0 10px rgba(0,0,0,0.3); display: none;">
    <h3>{{ section.settings.popup_heading }}</h3>
    <p>{{ section.settings.popup_text }}</p>
    <input type="email" placeholder="Enter your email" style="width: 100%; padding: 8px; margin-bottom: 10px; border: 1px solid #ccc;" />
    <button onclick="document.getElementById('custom-popup').style.display='none'" style="background: black; color: white; padding: 8px 16px; border: none;">Subscribe</button>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      setTimeout(() => {
        document.getElementById("custom-popup").style.display = "block";
      }, 3000); // show popup after 3s
    });
  </script>
{% endif %}
